<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="글 제목"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/content_author"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="닉네임"
                app:layout_constraintTop_toBottomOf="@+id/content_title"/>

            <TextView
                android:id="@+id/content_create_time"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="날짜"
                android:gravity="right"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_title"/>

            <TextView
                android:id="@+id/content_context"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="글 내용"
                app:layout_constraintTop_toBottomOf="@+id/content_author"/>

            <ImageButton
                android:id="@+id/btn_bookmark"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/btn_star_selector"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toLeftOf="@+id/btn_like"
                app:layout_constraintBottom_toBottomOf="@+id/content_context"

                >
            </ImageButton>
            <ImageButton
                android:id="@+id/btn_like"
                android:layout_width="35dp"
                android:layout_height="38dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/btn_like_selector"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintRight_toLeftOf="@+id/like_count"
                app:layout_constraintBottom_toBottomOf="@+id/content_context">
            </ImageButton>
            <TextView
                android:id="@+id/like_count"
                android:layout_width="30dp"
                android:layout_height="42dp"
                android:textSize="15dp"
                android:text="좋아요"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/content_context"
                android:textAlignment="center"
                android:gravity="center"
                android:padding="5dp" />
            
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/content_context"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_weight="1">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/comment_text_input"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_margin="4dp"
                style="@style/Widget.FreeTalk.TextInputLayout"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/comment_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btn_submit_comment"
                    style="@style/Widget.FreeTalk.Button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text=""
                    android:textSize="20dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    />

        </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>